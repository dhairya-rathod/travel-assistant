{
  "name": "ai-service",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon",
    "start": "node ./dist",
    "build": "node build.js",
    "commit-a": "git add . && git cz",
    "commit": "git cz",
    "lint": "tslint --project \"tsconfig.json\"",
    "test": "jest --testTimeout=10000"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@daos": "dist/daos",
    "@entities": "dist/entities",
    "@shared": "dist/shared",
    "@server": "dist/Server"
  },
  "dependencies": {
    "@langchain/core": "^0.3.73",
    "@langchain/google-genai": "^0.2.17",
    "@langchain/langgraph": "^0.4.9",
    "@langchain/openai": "^0.6.11",
    "@repo/api": "workspace:*",
    "axios": "^1.11.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^8.6.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^8.1.0",
    "langchain": "^0.3.32",
    "langsmith": "^0.3.67",
    "morgan": "^1.10.1",
    "swagger-ui-express": "^4.6.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^4.17.23",
    "@types/find": "^0.2.4",
    "@types/jsonfile": "^6.1.4",
    "@types/morgan": "^1.9.10",
    "@types/node": "^14.18.63",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "find": "^0.3.0",
    "fs-extra": "^9.1.0",
    "git-cz": "^4.9.0",
    "jsonfile": "^6.2.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.5.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
